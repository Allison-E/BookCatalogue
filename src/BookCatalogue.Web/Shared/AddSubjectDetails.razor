<EditForm Model="@Subject" OnValidSubmit="OnValidSubmit" id="@Id">
    <div class="">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row mb-3">
            <label for="inputFirstName" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <InputText class="form-control" id="inputFirstName" @bind-Value="Subject.Title" placeholder="Geometry"></InputText>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputLastName" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <InputTextArea class="form-control" id="inputLastName" @bind-Value="Subject.Description" placeholder="All about shapes and their math."></InputTextArea>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public EventCallback<EditContext> OnValidSubmit { get; set; }

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public Subject? Subject { get; set; }

    protected override void OnInitialized()
    {
        Subject ??= new();
    }
}